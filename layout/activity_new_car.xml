<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCar">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/bangers"
        android:text="BULL'S RENT"
        android:textAlignment="center"
        android:textSize="52dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text1"
        android:fontFamily="@font/antic"
        android:text="Nation Wide Car Rental App"
        android:textAlignment="center"
        android:textSize="22dp" />
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/text2"
        android:fontFamily="@font/bangers"
        android:text="ADD NEW CAR"
        android:textAlignment="center"
        android:textSize="22dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp"
        android:hint="Enter Owner Name"
        android:padding="10dp"
        android:layout_below="@id/text3"
        android:id="@+id/edit1"></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp"
        android:hint="Enter Car Name"
        android:padding="10dp"
        android:layout_below="@id/edit1"
        android:id="@+id/edit2"></EditText>

    <EditText
        android:layout_below="@id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp"
        android:hint="Enter Car Model"
        android:padding="10dp"
        android:id="@+id/edit3"></EditText>

    <EditText
        android:layout_below="@id/edit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:layout_marginTop="15dp"
        android:hint="Enter The Rent"
        android:padding="10dp"
        android:id="@+id/edit4"></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_marginTop="15dp"
        android:hint="Add New Car"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="24dp"
        android:layout_below="@id/edit4"
        android:id="@+id/btn"></Button>
</RelativeLayout>